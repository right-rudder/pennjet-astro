---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import { FaCheckCircle, FaCheckDouble } from "react-icons/fa";
import { PHONE_NUMBER, EMAIL_ADDRESS } from "../consts";
import { generateSEOMetadata } from "../utils/seo-helpers";
const headerData = {
  headerH1: "Thank You<br/>for Contacting",
  imagePath: "/src/assets/chris-leipelt-6w_dYdazo20-unsplash.jpg",
  imageAlt: "PennJet Aircraft Management, airport runway lights",
};
const seo = generateSEOMetadata("confirmation", {
  title: "Contact Confirmation | PennJet Aircraft Management",
  description:
    "Thank you for contacting PennJet Aircraft Management. We will respond within 1-5 business days. Call or email us for urgent requests.",
  keywords:
    "contact confirmation, PennJet Aircraft Management, aircraft management, aviation, email, phone",
});
---

<BaseLayout
  siteTitle={seo.title}
  siteDescription={seo.description}
  keywords={seo.keywords}
>
  <Header data={headerData} />

  <section class="py-16 px-5 bg-white -mt-12">
    <div
      class="flex flex-col items-center text-3xl mx-auto text-center gap-8 max-w-3xl bg-gray-200 rounded-xl p-8"
    >
      <FaCheckDouble className="size-52 text-blue-800" />
      <p class="text-gray-600 mt-12 leading-relaxed font-parag">
        Thank you for contacting <strong
          class="text-blue-950 font-sans font-black"
          >PennJet Aircraft Management</strong
        >. We are looking forward to working with you soon. We will review your
        message and get back with you within 1-5 business days.
      </p>
      <p class="text-gray-600 mt-6 leading-relaxed font-parag">
        You can also give us a call at <a
          class="text-blue-800 hover:text-blue-950 hover:underline duration-300"
          href={`tel:${PHONE_NUMBER}`}
          >{PHONE_NUMBER}
          <br />
        </a> or send us an email at <a
          class="text-blue-800 hover:text-blue-950 hover:underline duration-300"
          href={`mailto:${EMAIL_ADDRESS}`}>{EMAIL_ADDRESS}</a
        >.
      </p>
    </div>
  </section>
</BaseLayout>
