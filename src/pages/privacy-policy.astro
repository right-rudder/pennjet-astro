---
import privacyPolicies from "../data/privacy-policy";
import BaseLayout from "../layouts/BaseLayout.astro";
import { generateSEOMetadata } from "../utils/seo-helpers";

const { data } = privacyPolicies;

const seo = generateSEOMetadata("privacy", {
  title: "Privacy Policy",
  description:
    "Privacy Policy for PennJet Aircraft Management Services in Pottstown, PA. Learn how we protect your data and privacy as an aircraft owner or charter client.",
  keywords:
    "privacy policy, PennJet, aircraft management, private aviation, Pottstown, PA, data protection, charter services",
});
---

<BaseLayout
  siteTitle={seo.title}
  siteDescription={seo.description}
  keywords={seo.keywords}
>
  <div class="h-24 w-full bg-gray-100"></div>

  <section class="mt-12 font-serif flex flex-col items-center">
    <h1
      class="mx-auto text-center px-6 lg:px-0 text-primary-950 font-black max-w-4xl text-5xl lg:text-6xl"
      set:html={data.heading}
    />
    <p
      class="mx-auto mt-2 text-muted-400 text-center"
      set:html={data.subheading}
    />
    <div class="w-full mt-12 lg:w-3/5 bg-slate-200 px-8 py-12 rounded-sm">
      {
        data.content.map((part) => (
          <div class="mb-12">
            <h2 class="font-bold text-primary-900 tracking-tight uppercase mb-3 text-3xl">
              {part.heading}
            </h2>
            {part.paragraphs.map((paragraph) => (
              <p
                class="mb-3 leading-relaxed text-muted-700 text-justify"
                set:html={paragraph}
              />
            ))}
          </div>
        ))
      }
    </div>
  </section>
</BaseLayout>
