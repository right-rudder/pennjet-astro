---
import ImageComp from "../components/ImageComp.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { generateSEOMetadata } from "../utils/seo-helpers";

const seo = generateSEOMetadata("error", {
  title: "Internal Server Error | 500 Error",
  description:
    "We're experiencing technical difficulties. Please try again later or return to PennJet's homepage for aircraft management services in Pottstown, PA.",
  keywords:
    "500 error, internal server error, PennJet aircraft management, private aviation services",
});
---

<BaseLayout
  siteTitle={seo.title}
  siteDescription={seo.description}
  keywords={seo.keywords}
>
  <section class="relative isolate h-screen">
    <ImageComp
      imagePath="/src/assets/chris-leipelt-6w_dYdazo20-unsplash.jpg"
      imageAlt="PennJet aircraft on runway in Pottstown, PA - error page"
      aria-hidden="true"
      styles="absolute inset-0 -z-10 size-full object-cover object-top"
    />
    <div
      class="mx-auto w-full h-full flex justify-center align-middle items-center"
    >
      <div
        class="text-center max-w-7xl shadow-xl ring-2 ring-gray-100/30 bg-gradient-to-br from-white/60 via-black/20 to-white/60 backdrop-blur-md w-full lg:w-1/2 py-12 rounded-3xl"
      >
        <p class="text-base/8 font-semibold text-white">500</p>
        <h1
          class="mt-4 text-balance text-5xl font-semibold tracking-tight text-white sm:text-7xl"
        >
          500 Internal Server Error
        </h1>
        <h2 class="mt-2 text-2xl font-semibold text-yellow-400">
          PennJet Aircraft Management Services
        </h2>
        <p
          class="mt-6 text-pretty text-lg font-medium text-white/70 sm:text-xl/8"
        >
          Sorry, something went wrong on our end. Please try again later or use
          the links below to continue browsing.
        </p>
        <div class="mt-10 flex flex-col items-center gap-2">
          <a href="/" class="text-sm/7 font-semibold text-white"
            ><span aria-hidden="true">&larr;</span> Back to home</a
          >
          <a href="/blog" class="text-sm/7 font-semibold text-yellow-400"
            >Visit our Blog</a
          >
          <a href="/contact" class="text-sm/7 font-semibold text-blue-300"
            >Contact PennJet</a
          >
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
