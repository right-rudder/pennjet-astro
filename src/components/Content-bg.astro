---
import ImageComp from "./ImageComp.astro";

const { data } = Astro.props;
---

<section
  class="relative bg-gradient-to-r from-slate-900/50 to-slate-950 lg:py-20"
  id={data.id}
>
  <ImageComp
    imagePath={data.imagePath}
    imageAlt={data.imageAlt}
    styles="absolute inset-0 object-cover w-full h-full opacity-70"
  />
  <div class="flex justify-center lg:justify-end max-w-7xl">
    <div
      class="bg-slate-950/50 backdrop-blur-sm py-12 px-10 lg:rounded-md lg:shadow-lg ring-1 ring-slate-950/70"
    >
      <div class="w-full max-w-lg text-center lg:text-left">
        <h2 class="text-base font-semibold text-blue-100">
          {data.upperheading}
        </h2>
        <p
          class="mt-0 lg:mt-2 text-pretty text-4xl font-semibold tracking-tight text-yellow-500 sm:text-5xl"
        >
          {data.heading}
        </p>
        <p class="mt-6 text-lg/7 text-gray-200">
          {data.description}
        </p>
        {
          data.paragraphs.map((parag) => (
            <p class="mt-3 text-base/6 text-gray-300">{parag}</p>
          ))
        }
        <div class="mt-12">
          <a href={data.cta.link} class="btn-primary">{data.cta.text}</a>
        </div>
      </div>
    </div>
  </div>
</section>
