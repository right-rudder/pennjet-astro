---
import ImageComp from "./ImageComp.astro";

const { data } = Astro.props;
---

<section class="overflow-hidden bg-slate-900 py-24 sm:py-32" id={data.id}>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2">
      <div class="">
        <div class="w-full max-w-lg text-center lg:text-left">
          <h2 class="text-base/7 font-semibold text-blue-100">
            {data.upperheading}
          </h2>
          <p
            class="mt-2 text-pretty text-4xl font-semibold tracking-tight text-yellow-500 sm:text-5xl"
          >
            {data.heading}
          </p>
          <p class="mt-6 text-lg/8 text-gray-200">
            {data.description}
          </p>
          {
            data.paragraphs.map((parag) => (
              <p class="mt-3 text-base/7 text-gray-300">{parag}</p>
            ))
          }
        </div>
      </div>
      <div
        class="lg:rounded-lg overflow-hidden lg:shadow-lg ring-1 ring-slate-950 mt-12 lg:mt-0"
      >
        <ImageComp
          imagePath={data.imagePath}
          imageAlt={data.imageAlt}
          styles="w-full h-full object-cover"
        />
      </div>
    </div>
  </div>
</section>
